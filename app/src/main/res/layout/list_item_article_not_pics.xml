<?xml version="1.0" encoding="utf-8" ?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="2dp"
    app:cardElevation="1dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:background="@drawable/custom_ripple">

        <TextView
            android:id="@+id/tv_article_title"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textStyle="bold"
            android:textColor="@color/black_pearl"
            android:textSize="18sp"
            android:gravity="center"
            app:layout_constraintBottom_toTopOf="@+id/tv_list_publish_time"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="2月6日上午，应市人大常委会副主任、学院党委负责人李俊夫邀请，旅港乡贤、知名实业家刘汉兴、朱雪云伉俪来校参观访问。在参观校园和德龙会堂新办公室后，刘汉兴先生伉俪和李俊夫书记、政法系教授李春泰等亲切座谈，对我校新领导上任后的变化表示赞赏，欣然表示捐资10万元办学经费，支持学院事业的发展" />

        <TextView
            android:id="@+id/tv_list_publish_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:textColor="@color/gray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/tv_article_title"
            tools:text="@string/test_public_time" />

        <TextView xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/tv_views"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:drawableStart="@drawable/ic_article_views"
            android:gravity="center"
            android:textColor="@color/views_text_color"
            app:layout_constraintBottom_toBottomOf="@+id/tv_list_publish_time"
            app:layout_constraintStart_toStartOf="@+id/tv_article_title"
            app:layout_constraintTop_toTopOf="@+id/tv_list_publish_time"
            tools:text="10000" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>

