<?xml version="1.0" encoding="utf-8" ?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="106dp"
    android:background="#fff">

    <TextView
        android:id="@+id/tv_article_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="5dp"
        android:ellipsize="end"
        android:maxLines="3"
        android:textColor="#000"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_list_publish_time"
        app:layout_constraintEnd_toStartOf="@+id/iv_article_thumbnail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline2"
        tools:text="剪纸云：跨设备剪贴板云同步新选择
随着跨设备剪贴板云同步功能越发受到厂商和开发者的重视，「在家『复制』在公司『粘贴』」也早已经成为了一个过时的段子。虽然我们可以借助 Pushbullet、AirDroid、SendAnywhere 等专业工具来解决这类需求，但无论哪一款工具在剪贴板云同步这件事情的具体操作方式上都略微有些繁琐。
真正的剪贴板云同步，应该像「在这台设备上 Ctrl+c，在那台设备上 Ctrl+v」这么简单。而 Android 平台著名剪贴板管理工具剪纸堆开发者的新作剪纸云，恰好就能实现这样的效果。" />

    <ImageView
        android:id="@+id/iv_article_thumbnail"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="@string/iv_description"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toTopOf="@+id/guideline2"
        app:layout_constraintVertical_bias="0"
        tools:src="@drawable/test_image"
        tools:visibility="invisible"
        />

    <TextView
        android:id="@+id/tv_list_publish_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:textColor="#747474"
        app:layout_constraintBottom_toTopOf="@+id/view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline2"
        app:layout_constraintVertical_bias="1"
        tools:text="@string/test_public_time" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:background="#cccc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.618" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.08" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.96" />


</android.support.constraint.ConstraintLayout>

