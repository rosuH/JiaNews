<?xml version="1.0" encoding="utf-8" ?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="112dp"
    android:layout_marginTop="8dp"
    android:padding="8dp">
    
    <TextView
        android:id="@+id/tv_article_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textSize="16sp"
        android:maxLines="1"
        android:textColor="@color/black"
        android:ellipsize="end"
        tools:text="@string/test_text_title"/>

    <TextView
        android:id="@+id/tv_article_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_article_title"
        android:layout_toStartOf="@id/iv_article_thumbnail"
        android:maxLines="3"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:layout_marginTop="4dp"
        android:textSize="13sp"
        android:ellipsize="end"
        tools:text="@string/test_text_summary" />

    <ImageView
        android:id="@+id/iv_article_thumbnail"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/tv_article_title"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/iv_description"
        android:scaleType="centerCrop"
        tools:src="@drawable/test_image"/>
    <TextView
        android:id="@+id/tv_list_publish_time"
        android:layout_below="@id/tv_article_summary"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        tools:text="@string/test_public_time"/>
    <View
        android:layout_alignParentBottom="true"
        android:layout_marginTop="4dp"
        android:layout_height="1dp"
        android:layout_width="1080dp"
        android:background="@color/light_gray"/>
</RelativeLayout>